# Database Configuration (External PostgreSQL)
DB_CONNECTION_STRING=Host=host.docker.internal;Port=5432;Database=homassy_db;Username=your_username;Password=your_password

# Docker PostgreSQL Configuration (for local development with docker-compose.yml)
# These variables are used by:
# 1. PostgreSQL container - to initialize the database
# 2. Migrator container - to run migrations automatically on startup
# 3. API container - to connect to the database
POSTGRES_DB=homassy
POSTGRES_USER=homassy_user
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_HOST=postgres
DATABASE_PORT=5432

# JWT Configuration
JWT_SECRET_KEY=SuperSecretKeyForHomassyApplicationMinimum32CharactersLong!

# Ory Kratos Configuration
# Secrets (MUST be changed in production - minimum 32 characters)
KRATOS_COOKIE_SECRET=PLEASE-CHANGE-ME-I-AM-VERY-INSECURE!
KRATOS_CIPHER_SECRET=PLEASE-CHANGE-ME-I-AM-VERY-INSECURE!

# Development URLs (localhost) - these are hardcoded in docker-compose.yml for dev
# For production, set these in your production .env file:
# KRATOS_PUBLIC_URL=https://kratos.yourdomain.com
# KRATOS_ADMIN_URL=http://homassy-kratos:4434
# KRATOS_BROWSER_RETURN_URL=https://app.yourdomain.com
# KRATOS_CORS_ORIGIN=https://app.yourdomain.com
# KRATOS_WEBAUTHN_RP_ID=yourdomain.com
# KRATOS_WEBAUTHN_ORIGIN=https://app.yourdomain.com
# KRATOS_COOKIE_DOMAIN=.yourdomain.com

# Email Configuration (for production)
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SENDER_EMAIL=noreply@homassy.com
EMAIL_USERNAME=
EMAIL_PASSWORD=

# Application Settings
REGISTRATION_ENABLED=true

# Deploy Configuration
DEPLOY_PATH=/opt/homassy

# Frontend Configuration (when running web-only)
NUXT_PUBLIC_API_BASE=http://localhost:5226
NUXT_PUBLIC_KRATOS_URL=http://localhost:4433

# Raspberry Pi Deployment Configuration
# These variables are used by deploy-to-pi.sh script
RASPBERRY_PI_USER=pi
RASPBERRY_PI_HOST=localhost
RASPBERRY_PI_PORT=22
RASPBERRY_PI_SSH_KEY=  # Optional: path to SSH private key (e.g., /Users/username/.ssh/id_rsa) - leave empty if using password
RASPBERRY_PI_PASSWORD=  # Optional: SSH password - leave empty if using SSH key (requires sshpass: brew install hudochenkov/sshpass/sshpass)
RASPBERRY_PI_API_BASE=http://localhost:5226  # Production API URL for Raspberry Pi deployment

# VPS Deployment Configuration
# These variables are used by deploy-to-vps.sh script
VPS_USER=root
VPS_HOST=your-vps-hostname-or-ip
VPS_PORT=22
VPS_SSH_KEY=  # Optional: path to SSH private key (e.g., /Users/username/.ssh/id_rsa) - leave empty if using password
VPS_PASSWORD=  # Optional: SSH password - leave empty if using SSH key (requires sshpass: brew install hudochenkov/sshpass/sshpass)
VPS_API_BASE=http://your-vps-hostname-or-ip:5226  # Production API URL for VPS deployment
# Note: DEPLOY_PATH is shared with Raspberry Pi deployment and defaults to /opt/homassy
