# Database Configuration (External PostgreSQL)
DB_CONNECTION_STRING=Host=host.docker.internal;Port=5432;Database=homassy_db;Username=your_username;Password=your_password

# Docker PostgreSQL Configuration (for local development with docker-compose.yml)
# These variables are used by:
# 1. PostgreSQL container - to initialize the database
# 2. Migrator container - to run migrations automatically on startup
# 3. API container - to connect to the database
POSTGRES_DB=homassy
POSTGRES_USER=homassy_user
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_HOST=postgres
DATABASE_PORT=5432

# JWT Configuration
JWT_SECRET_KEY=SuperSecretKeyForHomassyApplicationMinimum32CharactersLong!

# Email Configuration
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SENDER_EMAIL=noreply@homassy.com
EMAIL_USERNAME=
EMAIL_PASSWORD=

# Application Settings
REGISTRATION_ENABLED=true

# Frontend Configuration (when running web-only)
NUXT_PUBLIC_API_BASE=http://localhost:5226

# Raspberry Pi Deployment Configuration
# These variables are used by deploy-to-pi.sh script
RASPBERRY_PI_USER=pi
RASPBERRY_PI_HOST=localhost
RASPBERRY_PI_PORT=22
RASPBERRY_PI_SSH_KEY=  # Optional: path to SSH private key (e.g., /Users/username/.ssh/id_rsa) - leave empty if using password
RASPBERRY_PI_PASSWORD=  # Optional: SSH password - leave empty if using SSH key (requires sshpass: brew install hudochenkov/sshpass/sshpass)
DEPLOY_PATH=/opt/homassy
