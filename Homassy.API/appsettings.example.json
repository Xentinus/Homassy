{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=homassy_db;Username=your_username;Password=your_password"
  },
  "Jwt": {
    "Issuer": "Homassy.API",
    "Audience": "Homassy.Client",
    "SecretKey": "SuperSecretKeyForHomassyApplicationMinimum32CharactersLong!",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "EmailVerification": {
    "CodeLength": 8,
    "CodeExpirationMinutes": 10
  },
  "Email": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "SenderEmail": "noreply@homassy.com",
    "SenderName": "Homassy",
    "Username": "",
    "Password": "",
    "EnableSsl": true
  },
  "RateLimiting": {
    "GlobalMaxAttempts": "100",
    "GlobalWindowMinutes": "1",
    "EndpointMaxAttempts": "30",
    "EndpointWindowMinutes": "1"
  },
  "RegistrationEnabled": true
}
