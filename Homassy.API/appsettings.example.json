{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=homassy_db;Username=your_username;Password=your_password"
  },
  "Authentication": {
    "UsersCanRegister": true
  },
  "Jwt": {
    "Issuer": "Homassy.API",
    "Audience": "Homassy.Client",
    "SecretKey": "SuperSecretKeyForHomassyApplicationMinimum32CharactersLong!",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "EmailVerification": {
    "CodeLength": 9,
    "CodeExpirationMinutes": 10
  },
  "Email": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "SenderEmail": "noreply@homassy.com",
    "SenderName": "Homassy",
    "Username": "",
    "Password": "",
    "EnableSsl": true
  },
  "RateLimiting": {
    "RequestCodeMaxAttempts": 5,
    "RequestCodeWindowMinutes": 15,
    "VerifyCodeMaxAttempts": 5,
    "VerifyCodeWindowMinutes": 15,
    "RefreshTokenMaxAttempts": 10,
    "RefreshTokenWindowMinutes": 60
  }
}
