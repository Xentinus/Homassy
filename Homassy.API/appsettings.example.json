{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=homassy_db;Username=your_username;Password=your_password"
  },
  "Jwt": {
    "Issuer": "Homassy.API",
    "Audience": "Homassy.Client",
    "SecretKey": "SuperSecretKeyForHomassyApplicationMinimum32CharactersLong!",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "EmailVerification": {
    "CodeExpirationMinutes": 10
  },
  "Email": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "SenderEmail": "noreply@homassy.com",
    "SenderName": "Homassy",
    "Username": "",
    "Password": "",
    "EnableSsl": true
  },
  "RateLimiting": {
    "GlobalMaxAttempts": "100",
    "GlobalWindowMinutes": "1",
    "EndpointMaxAttempts": "30",
    "EndpointWindowMinutes": "1"
  },
  "Security": {
    "AccountLockout": {
      "MaxFailedAttempts": 5,
      "LockoutDurationMinutes": 15,
      "EnableProgressiveLockout": true,
      "ProgressiveMultiplier": 2,
      "MaxLockoutDurationMinutes": 60
    }
  },
  "RegistrationEnabled": true,
  "Cors": {
    "AllowedOrigins": [
      "https://your-frontend-domain.com"
    ]
  },
  "RequestLogging": {
    "Enabled": true,
    "DetailedPaths": [],
    "ExcludedPaths": [
      "/health",
      "/openapi"
    ]
  },
  "Https": {
    "Enabled": false,
    "HttpsPort": null,
    "Hsts": {
      "Enabled": false,
      "MaxAgeDays": 365,
      "IncludeSubDomains": true,
      "Preload": false
    }
  },
  "RequestTimeout": {
    "DefaultTimeoutSeconds": 30,
    "Endpoints": [
      {
        "PathPattern": "/api/*/openfoodfacts/*",
        "TimeoutSeconds": 60
      }
    ]
  },
  "GracefulShutdown": {
    "Enabled": true,
    "TimeoutSeconds": 30
  }
}
